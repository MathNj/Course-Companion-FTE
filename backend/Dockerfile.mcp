# Dockerfile for MCP Server on Fly.io
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy MCP server files
COPY mcp_server_proper.py .

# Expose port
EXPOSE 8001

# Set environment variables
ENV MCP_PORT=8001
ENV BACKEND_URL=https://course-companion-fte.fly.dev/api/v1

# Run the MCP server
CMD ["python", "mcp_server_proper.py"]
