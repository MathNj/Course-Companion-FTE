# Course Companion Backend - Local Development Environment

# ================================
# Application
# ================================
APP_NAME="Course Companion FTE"
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ================================
# API Configuration
# ================================
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# ================================
# Database (PostgreSQL) - Docker Compose
# ================================
DATABASE_URL=postgresql+asyncpg://course_companion:devpassword@localhost:5432/course_companion?ssl=disable
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ================================
# Redis Cache - Docker Compose
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ================================
# JWT Authentication
# ================================
JWT_SECRET_KEY=dev-secret-key-change-in-production-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=43200

# ================================
# Cloudflare R2 Storage (Configure when needed)
# ================================
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=course-companion-content
R2_ENDPOINT=

# ================================
# CORS Configuration
# ================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# ================================
# Content Configuration
# ================================
CONTENT_CACHE_TTL=3600
CHAPTER_COUNT=6

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_PER_MINUTE=100

# ================================
# Phase 2 (Hybrid Intelligence) - OpenAI GPT-4o-mini
# ================================
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3
LLM_COST_ALERT_THRESHOLD=0.50
LLM_COST_ALERT_EMAIL=admin@example.com

# Phase 2 Feature Flags
ENABLE_ADAPTIVE_PATHS=true
ENABLE_LLM_ASSESSMENTS=true
ENABLE_PHASE2_CACHING=true

# Phase 2 Rate Limits (per premium user per month)
PREMIUM_ADAPTIVE_PATHS_LIMIT=10
PREMIUM_ASSESSMENTS_LIMIT=20

# Premium Subscription Settings
PREMIUM_MONTHLY_COST=9.99
FREE_TIER_ASSESSMENTS_LIMIT=0
PREMIUM_ASSESSMENTS_LIMIT=30
FREE_TIER_LEARNING_PATHS_LIMIT=0
PREMIUM_LEARNING_PATHS_LIMIT=10
