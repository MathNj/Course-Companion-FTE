# Course Companion Backend - Environment Variables
# Copy this file to .env and fill in actual values

# ================================
# Application
# ================================
APP_NAME="Course Companion FTE"
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ================================
# API Configuration
# ================================
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# ================================
# Database (PostgreSQL)
# ================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/course_companion
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ================================
# Redis Cache
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ================================
# JWT Authentication
# ================================
JWT_SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=43200

# ================================
# Cloudflare R2 Storage
# ================================
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=course-companion-content
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com

# ================================
# CORS Configuration
# ================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# ================================
# Content Configuration
# ================================
CONTENT_CACHE_TTL=3600
CHAPTER_COUNT=6

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_PER_MINUTE=100

# ================================
# Phase 2 (Hybrid Intelligence) - Only needed for Phase 2+
# ================================
# ANTHROPIC_API_KEY=your-anthropic-api-key
# ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
# LLM_COST_ALERT_THRESHOLD=0.50
